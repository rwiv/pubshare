generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  password    String
  certified   Boolean       @default(false)
  type        String        @default("MEMBER")
  FileComment FileComment[]
}

model File {
  id       Int           @id @default(autoincrement())
  path     String        @unique
  comments FileComment[]
  fileTags FileTag[]
}

model FileComment {
  id          Int           @id @default(autoincrement())
  fileId      Int
  file        File          @relation(fields: [fileId], references: [id], onDelete: Cascade)
  createdById Int
  createdBy   Account       @relation(fields: [createdById], references: [id])
  parentId    Int?
  parent      FileComment?  @relation("ParentChildren", fields: [parentId], references: [id])
  children    FileComment[] @relation("ParentChildren")
  content     String
}

model Tag {
  id       Int       @id @default(autoincrement())
  name     String
  fileTags FileTag[]
}

model FileTag {
  id     Int  @id @default(autoincrement())
  fileId Int
  file   File @relation(fields: [fileId], references: [id])
  tagId  Int
  tag    Tag  @relation(fields: [tagId], references: [id])
}

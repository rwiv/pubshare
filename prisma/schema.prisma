generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  password    String
  certified   Boolean       @default(false)
  role        String        @default("MEMBER")
  FileComment FileComment[]
}

model File {
  id   Int    @id @default(autoincrement())
  path String @unique
}

model FileComment {
  id          Int     @id @default(autoincrement())
  createdById Int
  createdBy   Account @relation(fields: [createdById], references: [id])
  content     String
}
